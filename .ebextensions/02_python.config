container_commands:
  01_upgrade_pip:
    command: "python -m pip install --upgrade pip"
    leader_only: true
  02_upgradde_setuptools:
    command: "python -m pip install --upgrade setuptools"
    leader_only: true

files:
  "/opt/python/run/venv/pip.conf":
    mode: "000755"
    owner: root
    user: root
    content: |
      [global]
      no-cache-dir=false
